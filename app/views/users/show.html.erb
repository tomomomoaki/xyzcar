<%= render 'shared/header'%>

<div class='main-show-window'>
  <div class='back-btn-box'>
  </div>
  <div class='main-user-show'>
    <div class='user-title-box'>
      <div class='user-show-image'>
      </div>
      <div class='user-show-nickname'>
        <%= @user.nickname %>
      </div>
      <div class='user-show-favorite-car'>
        好きな車：<%= @user.favorite_car %>
      </div>
    </div>
    <div class='user-car-length'>
      投稿数：<%= @user.cars.length %>
    </div>
    <div class='user-show-introduction'>
      <%= safe_join(@user.introduction.split("\n"), tag(:br)) %>
    </div>
  </div>
  <div class='exsample-car'>
    <div class='exsample-car-title'>
      <%=@user.nickname%>さんのレビュー
    </div>
    <%= render partial:'cars/car', collection: @cars %>
    <div class='review-footer'>
      <% if @cars == [] %>
        <div class='non-review'><%=@user.nickname%>さんの投稿は、まだありません</div>
      <% else %>
        <%= paginate @cars %>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>