<header class='header'>
  <div class='title-box'>
    <%= link_to 'car_xyz', root_path %>
  </div>
  <div class='user-box'>
    <ul class='user-list'>
      <li><%=link_to '戻る', root_path, class:'header-user-btn'%></li>
      <li><%=link_to '新規登録', new_user_registration_path, class:'header-user-btn'%></li>
    </ul>
  </div>
</header>

<div class='main-signup-window'>
  <div class='main-signup-page'>

    <div class='signup-title'>ログイン</div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label for="email" class="form-text">Email</label>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label for="password" class="form-text">Password</label>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", autofocus: true, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "ログイン", name:"commit" %>
      </div>
    <% end %>

  </div>
</div>

<%= render "shared/footer" %>
