<%= render "shared/header" %>
<%= form_with model: @form, class:'new-review-form', local: true do |f|%>
<div class='main-new-form'>
  <div class='make-new-text'>レビュー編集</div>

  <%#= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">タイトル</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :title, class:"car-title", id:"title", placeholder:"title", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">画像</label>
    </div>
    <%= f.file_field :image, value: @car.image, id:"car-image" %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">本文</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :text, class:"car-text", id:"text", placeholder:"text" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メーカー</label>
    </div>
    <%= f.collection_select(:maker_id, Maker.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">車名</label>
    </div>
    <%= f.text_field :car_name, class:"car-car-name", id:"car_name", maxlength:"15" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ボディタイプ</label>
    </div>
    <%= f.collection_select(:body_type_id, BodyType.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">タグ付け（#抜きで、タグごとに「,」で区切ってください）</label>
    </div>
    <div class='tag-form'>
      <%= f.text_field :name, placeholder:'例）かっこいい,すごい', class:"car-tag", id:'tag-form' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit '変更する'%>
  </div>
</div>
<% end %>