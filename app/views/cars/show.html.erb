<%= render 'shared/header'%>

<div class='main-window'>
  <div class='main-show'>
    <div class='car-title-box'>
      <div class='car-title'>
        <%= @car.title %>
      </div>
      <div class='car-info'>
        <span class='spans'><%= @car.maker.name %>   /</span>
        <span class='spans'><%= @car.car_name %>   /</span>
        <span class='spans'><%= @car.body_type.name %></span>
      </div>
      <div class='car-user-name'>
        投稿者：<%=link_to @car.user.nickname %>
        <%= link_to '編集' %>
        <%= link_to '削除' %>
      </div>
    </div>
    <div class='car-image-box'>
      <%= image_tag @car.image.variant(resize:'600x600') if @car.image.attached? %>
      <%= image_tag 'img_noimage.png' unless @car.image.attached? %>
    </div>
    <div class='car-text-box'>
      <%= @car.text %>
    </div>
    <div class='car-comennt-box'>
      <div class='comment-area'>
      </div>
      <div class='comment-form'>
        <%#= form_with model:'ddd', url:'ddd', local: true do |f| %>
          <%#= f.text_area class:'comment-text-form'%>
        <%# end %>
      </div>
    </div>
  </div>
</div>